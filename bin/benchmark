#!/usr/bin/env bash

SCRIPT_DIR=$(readlink -f $(dirname ${BASH_SOURCE[0]}))
PACKAGE_DIR=$(dirname $SCRIPT_DIR)
SRC="$PACKAGE_DIR/src/$1.lua"

if [ ! -e "$SRC" ]
then
    echo "script path argument missing"
    exit
fi

SHA=`redis-cli script load "$(cat $SRC)"`

if [ -n "$4" ]
then
    CLIENTS=$4
else
    CLIENTS=50
fi

if [ -n "$5" ]
then
    REQUESTS=$5
else
    REQUESTS=1000000
fi

redis-benchmark -c $CLIENTS -n $REQUESTS evalsha $SHA 2 $2 $3